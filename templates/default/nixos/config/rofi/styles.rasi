configuration {
	font:                "Iosevka Nerd Font 10";
	show-icons:          true;
	icon-theme:          "Papirus";
	display-drun:        "î§Œ";
	drun-display-format: "{name}";
	disable-history:     false;
	fullscreen:          false;
	hide-scrollbar:      true;
	sidebar-mode:        false;
}

@import "colors.rasi"

window {
    background-color: @t-bg;
    border: 1px;
    border-color: @t-border;
    border-radius: 8px;
    width: 21em;
}

inputbar {
    children: [ entry ];
    background-color: @t-fg;
    border: 0 0 1px 0;
    border-color: @t-border;
}

entry {
    placeholder: "Search application...";
    placeholder-color: @t-prompt;
    padding: 0.75em 1.25em;
}

listview {
    lines: 6;
    margin: 0.5em 0 0.75em;
}

element {
    padding: 0.5em 1em;
    margin: 0 0.75em;
}

element.selected {
    background-color: @t-select;
    border: 1px;
    border-color: @t-border;
    border-radius: 8px;
}

element-text {
    highlight: bold;
    font: "SF Pro Text Medium 16px";
}